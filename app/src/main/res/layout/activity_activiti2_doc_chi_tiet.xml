<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/layout"
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_weight="9.3"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_margin="9dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:weightSum="5"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvTheLoai"
                        android:textSize="16dp"
                        android:layout_gravity="center"
                        android:text="Kinh doanh"
                        android:textColor="@color/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvDate"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:text="Thứ năm, 30/12/2021, 17:11 (GMT+7)"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>
                <TextView
                    android:id="@+id/tvTitledetail"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/tvDescription"
                    android:layout_marginTop="9dp"
                    android:textSize="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/black"
                    android:layout_marginTop="9dp"
                    android:textSize="17dp"
                    android:id="@+id/tvNoiDung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/imgMuiTenDocChiTiet"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center|left"
                android:src="@drawable/ic_baseline_arrow_back_24" />
            <ImageView
                android:layout_marginRight="60dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/imgLinkDocChiTiet"
                android:src="@drawable/ic_baseline_format_size_24"
                android:id="@+id/imgToNhoDocChiTiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/imgLinkDocChiTiet"
                android:src="@drawable/ic_baseline_bookmark_24"
                android:id="@+id/imgBoLuyDocChiTiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/imgLuyDocChiTiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/imgLinkDocChiTiet"
                android:src="@drawable/ic_baseline_bookmark_border_24" />
            <ImageView
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_baseline_share_24"
                android:id="@+id/imgLinkDocChiTiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

</layout>